	 Exploit/vexploitWireless.c \
	 Hdebug/vdebug.c \
	 Hdebug/vtestfinal.c \
	 Evt/suevt.c \
	 Evt/vjdbevt.c \
	 Evt/vlisteEvt.c \
	 Evt/vtrap.c \
	 Alarme/valarme.c \
	 Alarme/vlistealarme.c \
	 ../LibrarySystem/librarySystem.a \
	 ../LibraryBdd/libraryBdd.a
OBJ= ${SRC:.c=.o}

all: ${EXEC}

${EXEC} : ${OBJ}
	${CC} -o ${EXEC} ${OBJ} ${LDFLAGS}

%.o: .c
	${CC} -o $@ -c @< ${CFLAGS}

clean : 
	@find -name "*.o" | xargs rm -rf

distclean :
	@rm -rf ${EXEC} 
