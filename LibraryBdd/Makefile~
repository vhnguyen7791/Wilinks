CFLAGS=${ACTIA_CFLAGS}
CFLAGS+=-DCOMPIL_LIBRARYBDD

LDFLAGS=${ACTIA_LDFLAGS}

EXEC= libraryBdd
SRC= bddfile.c \
	 bddjdb.c \
	 bddsystemfile.c \
	 cip_jdb.c \
	 cip_monitor.c \
	 cip_snmpd.c \
	 cip_trap.c \
	 client.c \
	 config.c \
	 custom_langue.c \
	 debug.c \
	 def_configfiles.c \
	 def_exploitfiles.c \
	 event.c \
	 exp_event.c \
	 exploit.c \
	 fctu8bit.c \
	 http.c \
	 langue.c \
	 libraryBdd.c \
	 locksem.c \
	 procfile.c \
	 timeout.c \
	 ad7814.c \
	 ksz8893.c \
	 valeurs.c \
	 environmt.c \
	 list_freq.c 
OBJ= ${SRC:.c=.o}

all: ${EXEC}

${EXEC} : ${OBJ}
	${CROSS_COMPILE}ar rcs $@.a $^

%.o: %.c  
	$(CC) -o $@ -c $< ${CFLAGS}

clean : 
	@rm -rf *.o ${EXEC}.a

mrproper : clean
	@rm -rf ${EXEC}.a
